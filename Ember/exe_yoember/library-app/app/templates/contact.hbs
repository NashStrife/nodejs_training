<h1>Contact Us</h1>
{{#if responseMessage}}
    <div class="alert alert-success">{{responseMessage}}</div>
{{/if}}
<form {{action 'saveMessage' model on="submit"}}>
    <p>
        <label for="email">Email: </label><br>
        {{input type="email" value=model.email id="email" placeholder="Please type your e-mail address." autofocus="autofocus"}}
    </p>
    <p>
        <label for="message">Your Message: </label><br>
        {{textarea id="message" value=model.message placeholder="At least 5 characters" rows="7"}}
    </p>
    
    <p>
        {{input type="submit" value="Send Message" disabled=isDisabled}}
    </p>
</form>