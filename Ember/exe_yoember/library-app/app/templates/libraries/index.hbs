{{#if responseMessage}}
    <div class="alert alert-success">{{responseMessage}}</div>
{{/if}}

<h2>List</h2>
<nav>
    {{input type="text" value=value placeholder="Filter by Name"}}
    <button class="btn btn-default" {{action 'filterByName' value}}>Search</button>
    <button class="btn btn-default" {{action 'filterByName'}}>List All</button>
</nav>
<section>
    {{#if errorMessage}}
        <div class="alert alert-danger">{{errorMessage}}</div>
    {{/if}}
    {{#each model as |library|}}
    {{!--call the component library-item and pass the library locale var as "item" parameter--}}
        {{#library-item item=library}}
        {{!--the links appear in place of the "yield" tag inside the component--}}
            {{#link-to 'libraries.edit' library.id class="edit" tagName="button"}} Edit{{/link-to}}
            <button {{action 'deleteLibrary' library}} class="delete">Delete</button>
        {{/library-item}}
    {{/each}}
</section>